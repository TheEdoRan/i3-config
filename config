# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3) and picom
bindsym $mod+Shift+r exec --no-startup-id i3-restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym s       resize shrink width 10 px or 3 ppt
        bindsym Shift+w resize grow height 10 px or 3 ppt
        bindsym Shift+s resize shrink height 10 px or 3 ppt
        bindsym w       resize grow width 10 px or 3 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# color defines for zenburn styled i3
set $bg     #2c2c2e
set $fg     #9f9f9f
set $hi     #efef8f
set $ac     #0C87E7
set $tx     #FFFFFF
set $ia     #757575
set $be     #FF455B
set $yw     #E1FD79
set $gn     #88b090
set $rd     #0066B5

bar {
  font pango: Hack Nerd Font 11
  status_command i3blocks
  position top
  tray_output primary
  tray_padding 0
  #separator_symbol "〈  "

  colors {
    background $bg
    statusline $tx
    separator $ia
    focused_workspace  $ac $ac $tx
    active_workspace   $fg $fg $tx
    inactive_workspace $bg $bg $ia
    urgent_workspace   $be $be $tx
  }
}

bindsym $mod+backslash mode "resize"


# set some nice colors      border     background  text
client.focused              $ac        $ac         $tx
client.unfocused            $bg        $bg         $ia
client.focused_inactive     $bg        $bg         $ac
client.urgent               $rd        $rd         $tx

