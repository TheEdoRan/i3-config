###############################################################################

# set modifier key
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango: Noto Sans 11

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# move window to other display
bindsym $mod+Mod1+h move container to output left
bindsym $mod+Mod1+j move container to output down
bindsym $mod+Mod1+k move container to output up
bindsym $mod+Mod1+l move container to output right

# move workspace to other display
bindsym $mod+Control+Mod1+h move workspace to output left
bindsym $mod+Control+Mod1+j move workspace to output down
bindsym $mod+Control+Mod1+k move workspace to output up
bindsym $mod+Control+Mod1+l move workspace to output right

# enter fullscreen mode for the focused container
bindsym $mod+Tab fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+q layout stacking
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
# bindsym $mod+Shift+t focus mode_toggle

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace
bindsym $mod+Shift+r exec --no-startup-id i3-restart

# resize window (you can also use the mouse for that)
bindsym $mod+backslash mode "resize"

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym s       resize shrink width 10 px or 3 ppt
        bindsym Shift+w resize grow height 10 px or 3 ppt
        bindsym Shift+s resize shrink height 10 px or 3 ppt
        bindsym w       resize grow width 10 px or 3 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# gaps
bindsym $mod+Shift+g exec --no-startup-id i3 gaps inner all toggle 10 && i3 gaps outer all toggle 5
gaps inner 10
gaps outer 5

###############################################################################

# WORKSPACES
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+Control+k workspace prev
bindsym $mod+Control+j workspace next

# move focused container to workspace
bindsym $mod+Shift+1 exec --no-startup-id i3-switch-ws-focus $ws1
bindsym $mod+Shift+2 exec --no-startup-id i3-switch-ws-focus $ws2
bindsym $mod+Shift+3 exec --no-startup-id i3-switch-ws-focus $ws3
bindsym $mod+Shift+4 exec --no-startup-id i3-switch-ws-focus $ws4
bindsym $mod+Shift+5 exec --no-startup-id i3-switch-ws-focus $ws5

###############################################################################

# COLORS
# set colors vars
set $bg     #2c2c2e
set $fg     #9f9f9f
set $hi     #efef8f
set $ac     #0C87E7
set $tx     #FFFFFF
set $ia     #757575
set $be     #FF455B
set $yw     #E1FD79
set $gn     #88b090
set $rd     #0066B5

# set some nice colors      border     background  text
client.focused              $ac        $ac         $tx
client.unfocused            $bg        $bg         $ia
client.focused_inactive     $bg        $bg         $ac
client.urgent               $rd        $rd         $tx

###############################################################################

# BAR
bar {
  font pango: Hack Nerd Font 11
  status_command i3blocks
  position top
  tray_output primary
  tray_padding 0
  #separator_symbol "ã€ˆ  "

  colors {
    background $bg
    statusline $tx
    separator $ia
    focused_workspace  $ac $ac $tx
    active_workspace   $fg $fg $tx
    inactive_workspace $bg $bg $ia
    urgent_workspace   $be $be $tx
  }
}

###############################################################################

# KEYBINDINGS
# volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id volctl +5% && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id volctl -5% && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec --no-startup-id volctl toggle && pkill -RTMIN+1 i3blocks
bindsym XF86AudioPlay exec --no-startup-id playerctl --ignore-player=chromium play-pause && pkill -RTMIN+6 i3blocks
bindsym XF86AudioStop exec --no-startup-id playerctl --ignore-player=chromium stop && pkill -RTMIN+6 i3blocks
bindsym XF86AudioNext exec --no-startup-id playerctl --ignore-player=chromium next && pkill -RTMIN+6 i3blocks
bindsym XF86AudioPrev exec --no-startup-id playerctl --ignore-player=chromium previous && pkill -RTMIN+6 i3blocks

# brightness
bindsym XF86MonBrightnessUp exec --no-startup-id brightctl +10
bindsym XF86MonBrightnessDown exec --no-startup-id brightctl -10

# power management
bindsym XF86PowerOff exec --no-startup-id power-manager
bindsym $mod+Shift+x exec --no-startup-id power-manager
bindsym $mod+Control+Shift+s exec --no-startup-id power-manager suspend
bindsym $mod+Control+Shift+l exec --no-startup-id power-manager lock
bindsym $mod+Control+Shift+x exec --no-startup-id power-manager shutdown
bindsym $mod+Control+Shift+r exec --no-startup-id power-manager reboot
bindsym $mod+Control+Shift+q exec --no-startup-id power-manager exit

# others
bindsym $mod+space exec --no-startup-id dmenu-desktop
bindsym $mod+Return exec --no-startup-id i3-sensible-terminal
bindsym $mod+e exec --no-startup-id pcmanfm
bindsym $mod+b exec --no-startup-id firefox
bindsym $mod+Mod1+b exec --no-startup-id brave
bindsym $mod+t workspace $ws2; exec --no-startup-id telegram-desktop
bindsym $mod+s workspace $ws4; exec --no-startup-id spotify
bindsym $mod+igrave exec --no-startup-id authy
bindsym $mod+apostrophe exec --no-startup-id bitwarden
bindsym $mod+plus exec --no-startup-id =
bindsym $mod+Shift+less exec --no-startup-id monitor-switch
bindsym $mod+Shift+s exec --no-startup-id flameshot gui
bindsym $mod+shift+dot exec --no-startup-id transmission-gtk
bindsym $mod+m exec --no-startup-id thunderbird

# keyboard locks
bindsym --release Caps_Lock exec --no-startup-id pkill -RTMIN+3 i3blocks
bindsym --release Num_Lock  exec --no-startup-id pkill -RTMIN+3 i3blocks

